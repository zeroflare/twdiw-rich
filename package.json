{
  "name": "twdiw-rich",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:init": "wrangler d1 execute twdiw-rich-db --local --file=./db/schema.sql",
    "db:init:prod": "wrangler d1 execute twdiw-rich-db --remote --file=./db/schema.sql",
    "db:query": "wrangler d1 execute twdiw-rich-db --local",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "check": "npm run lint && npm run format:check"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "hono": "^4.10.4",
    "openid-client": "^6.8.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "wrangler": "^4.45.3"
  }
}
